<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage"
    android:orientation="vertical"
    tools:context=".homepage">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="44dp"
        android:layout_height="58dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/gambar" />

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:placeholder="@drawable/bg_grey"
        app:error_image="@drawable/bg_grey"
        app:auto_cycle="true"
        app:delay="0"
        app:period="1000"
        app:corner_radius="5">
    </com.denzcoskun.imageslider.ImageSlider>

    <TextView
        android:id="@+id/titlemenu"
        android:layout_width="156dp"
        android:layout_height="39dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="5dp"
        android:text="Menu Utama"
        android:textSize="25sp"
        android:textStyle="bold" />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/line"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="397dp"
        android:layout_height="468dp"
        android:layout_marginBottom="49dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:columnCount="3"
            android:rowCount="4">

            <ImageButton
                android:id="@+id/bt1"
                android:layout_width="30sp"
                android:layout_height="120sp"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:backgroundTint="#FFE187"
                android:src="@drawable/img1"/>

            <ImageButton
                android:id="@+id/bt2"
                android:layout_width="30sp"
                android:layout_height="120sp"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:backgroundTint="#F2855E"
                android:src="@drawable/img2"/>

            <ImageButton
                android:id="@+id/bt3"
                android:layout_width="30sp"
                android:layout_height="120sp"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:backgroundTint="#47C6C1"
                android:src="@drawable/img3"/>

            <ImageButton
                android:id="@+id/bt4"
                android:layout_width="30sp"
                android:layout_height="120sp"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:backgroundTint="#8253FB"
                android:src="@drawable/img4"/>

            <ImageButton
                android:id="@+id/bt5"
                android:layout_width="30sp"
                android:layout_height="120sp"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:backgroundTint="#FEA31B"
                android:src="@drawable/img5"/>

            <ImageButton
                android:id="@+id/bt6"
                android:layout_width="30sp"
                android:layout_height="120sp"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:backgroundTint="#FFCC33"
                android:src="@drawable/img6"/>

            <ImageButton
                android:id="@+id/bt7"
                android:layout_width="30sp"
                android:layout_height="120sp"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:backgroundTint="#C3F25E"
                android:src="@drawable/img7"/>

            <ImageButton
                android:id="@+id/bt8"
                android:layout_width="30sp"
                android:layout_height="120sp"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:backgroundTint="#AEA0D2"
                android:src="@drawable/img8"/>

            <ImageButton
                android:id="@+id/bt9"
                android:layout_width="30sp"
                android:layout_height="120sp"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:backgroundTint="#196E63"
                android:src="@drawable/img9"/>

            <ImageButton
                android:id="@+id/bt10"
                android:layout_width="30sp"
                android:layout_height="120sp"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:backgroundTint="#76A6A4"
                android:src="@drawable/img10"/>

            <ImageButton
                android:id="@+id/bt11"
                android:layout_width="30sp"
                android:layout_height="120sp"
                android:layout_columnWeight="1"
                android:layout_margin="5sp"
                android:backgroundTint="#CF6C58"
                android:src="@drawable/img11"/>
        </GridLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomnav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-1dp"
            android:background="#25446F"
            app:itemIconTint="@color/icons_color"
            app:itemRippleColor="@color/white"
            app:itemTextColor="@color/white"
            app:menu="@menu/navigation_item">
        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
